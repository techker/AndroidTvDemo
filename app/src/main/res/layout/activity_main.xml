<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customAttr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background"
    android:focusable="false">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <include
            android:id="@+id/include"
            layout="@layout/activity_title_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x120"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x130"
            android:focusable="false" />

        <ImageView
            android:id="@+id/iv_net"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/include"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/x30"
            android:focusable="false"
            android:src="@mipmap/icon_enh" />

        <ImageView
            android:id="@+id/iv_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/include"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/x30"
            android:focusable="false"
            android:src="@mipmap/icon_wifi"
            android:visibility="invisible" />
    </LinearLayout>

    <com.xiaoxuan.demo.tv.widget.layout.TvZorderLinearLayout
        android:id="@+id/tzl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:focusable="false">

        <com.xiaoxuan.demo.tv.widget.view.TvHorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.xiaoxuan.demo.tv.widget.layout.TvZorderRelativeLayout
                android:id="@+id/tv_relativelayout_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left|center"
                android:clipToPadding="false"
                android:focusable="false"
                android:gravity="left|center"
                android:paddingBottom="@dimen/x80"
                android:paddingEnd="@dimen/x40"
                android:paddingStart="@dimen/x40">

                <com.xiaoxuan.demo.tv.widget.layout.RoundedFrameLayout
                    android:id="@+id/rf_1"
                    android:layout_width="@dimen/x420"
                    android:layout_height="@dimen/x560"
                    android:layout_margin="@dimen/x5"
                    android:layout_toEndOf="@+id/video_view"
                    android:background="@drawable/img_blue"
                    android:focusable="true"
                    android:nextFocusUp="@+id/rf_1">

                    <com.xiaoxuan.demo.tv.widget.view.MarqueeText
                        android:id="@+id/mt_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/border_down_shape"
                        android:gravity="center"
                        android:padding="15px"
                        android:text="1"
                        android:textColor="@color/gold"
                        android:textSize="15sp" />

                </com.xiaoxuan.demo.tv.widget.layout.RoundedFrameLayout>

                <com.xiaoxuan.demo.tv.widget.layout.RoundedFrameLayout
                    android:id="@+id/rf_2"
                    android:layout_width="@dimen/x420"
                    android:layout_height="@dimen/x560"
                    android:layout_margin="@dimen/x5"
                    android:layout_toEndOf="@+id/rf_1"
                    android:background="@drawable/img_jasper"
                    android:focusable="true"
                    android:nextFocusUp="@+id/rf_2"
                    android:padding="0dp">

                    <com.xiaoxuan.demo.tv.widget.view.MarqueeText
                        android:id="@+id/mt_2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x80"
                        android:layout_gravity="bottom"
                        android:background="@drawable/border_down_shape"
                        android:gravity="center"
                        android:padding="@dimen/x15"
                        android:text="2"
                        android:textColor="@color/gold"
                        android:textSize="15sp" />

                </com.xiaoxuan.demo.tv.widget.layout.RoundedFrameLayout>

                <com.xiaoxuan.demo.tv.widget.layout.RoundedFrameLayout
                    android:id="@+id/rf_3"
                    android:layout_width="@dimen/x420"
                    android:layout_height="@dimen/x275"
                    android:layout_margin="@dimen/x5"
                    android:layout_toEndOf="@+id/rf_2"
                    android:background="@drawable/img_green"
                    android:focusable="true"
                    android:nextFocusUp="@+id/rf_3"
                    android:padding="0dp">

                    <com.xiaoxuan.demo.tv.widget.view.MarqueeText
                        android:id="@+id/mt_3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x80"
                        android:layout_gravity="bottom"
                        android:background="@drawable/border_down_shape"
                        android:gravity="center"
                        android:padding="@dimen/x15"
                        android:text="3"
                        android:textColor="@color/gold"
                        android:textSize="15sp" />
                </com.xiaoxuan.demo.tv.widget.layout.RoundedFrameLayout>

                <com.xiaoxuan.demo.tv.widget.layout.RoundedFrameLayout
                    android:id="@+id/rf_4"
                    android:layout_width="@dimen/x420"
                    android:layout_height="@dimen/x275"
                    android:layout_below="@+id/rf_3"
                    android:layout_margin="@dimen/x5"
                    android:layout_toEndOf="@+id/rf_2"
                    android:background="@drawable/img_red"
                    android:focusable="true"
                    android:padding="0dp">

                    <com.xiaoxuan.demo.tv.widget.view.MarqueeText
                        android:id="@+id/mt_4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x80"
                        android:layout_gravity="bottom"
                        android:background="@drawable/border_down_shape"
                        android:gravity="center"
                        android:padding="@dimen/x15"
                        android:text="4"
                        android:textColor="@color/gold"
                        android:textSize="15sp" />

                </com.xiaoxuan.demo.tv.widget.layout.RoundedFrameLayout>

                <com.xiaoxuan.demo.tv.widget.layout.RoundedFrameLayout
                    android:id="@+id/rf_5"
                    android:layout_width="@dimen/x420"
                    android:layout_height="@dimen/x275"
                    android:layout_margin="@dimen/x5"
                    android:layout_toEndOf="@+id/rf_3"
                    android:background="@drawable/img_yellow"
                    android:focusable="true"
                    android:nextFocusUp="@+id/rf_5"
                    android:padding="0dp">

                    <com.xiaoxuan.demo.tv.widget.view.MarqueeText
                        android:id="@+id/mt_5"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x80"
                        android:layout_gravity="bottom"
                        android:background="@drawable/border_down_shape"
                        android:gravity="center"
                        android:padding="@dimen/x15"
                        android:text="5"
                        android:textColor="@color/gold"
                        android:textSize="15sp" />
                </com.xiaoxuan.demo.tv.widget.layout.RoundedFrameLayout>

                <com.xiaoxuan.demo.tv.widget.layout.RoundedFrameLayout
                    android:id="@+id/rf_6"
                    android:layout_width="@dimen/x420"
                    android:layout_height="@dimen/x275"
                    android:layout_below="@+id/rf_5"
                    android:layout_margin="@dimen/x5"
                    android:layout_toEndOf="@+id/rf_3"
                    android:background="@drawable/img_lawngreen"
                    android:focusable="true"
                    android:padding="0dp">

                    <com.xiaoxuan.demo.tv.widget.view.MarqueeText
                        android:id="@+id/mt_6"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x80"
                        android:layout_gravity="bottom"
                        android:background="@drawable/border_down_shape"
                        android:focusable="false"
                        android:gravity="center"
                        android:lines="1"
                        android:padding="@dimen/x15"
                        android:text="6"
                        android:textColor="@color/gold"
                        android:textSize="15sp" />

                </com.xiaoxuan.demo.tv.widget.layout.RoundedFrameLayout>
            </com.xiaoxuan.demo.tv.widget.layout.TvZorderRelativeLayout>
        </com.xiaoxuan.demo.tv.widget.view.TvHorizontalScrollView>
    </com.xiaoxuan.demo.tv.widget.layout.TvZorderLinearLayout>

    <com.xiaoxuan.demo.tv.widget.view.ScrollTextView
        android:id="@+id/sv_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_margin="@dimen/x16"
        android:focusable="false"
        customAttr:isHorizontal="true"
        customAttr:speed="3"
        customAttr:textColor="#ffffffff"
        customAttr:textSize="21sp"
        customAttr:times="567" />
</RelativeLayout>